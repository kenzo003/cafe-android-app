<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav"
    app:startDestination="@id/authFragment2">

    <fragment
        android:id="@+id/authFragment2"
        android:name="com.example.cafe.screens.auth.AuthFragment"
        android:label="auth_fragment"
        tools:layout="@layout/auth_fragment" >
        <action
            android:id="@+id/action_authFragment2_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_authFragment2_to_enterPinFragment2"
            app:destination="@id/enterPinFragment2" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.cafe.screens.auth.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_enterPinFragment2"
            app:destination="@id/enterPinFragment2" />
    </fragment>
    <fragment
        android:id="@+id/enterPinFragment2"
        android:name="com.example.cafe.screens.auth.EnterPinFragment"
        android:label="enter_pin_fragment"
        tools:layout="@layout/enter_pin_fragment" />
</navigation>